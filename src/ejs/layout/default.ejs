<% locals.layout_default = function (buf, opts, content) { %><%
  var params = ((opts.env == 'tumblr') ? var_tumblr : var_sample);
  params.env = opts.env;

  if (opts.env == 'tumblr') {
    img_path = 'http://blp-preview.fnobi.com' + img_path;
  }
%><!DOCTYPE html>
<html lang="ja">
<head>
<% partial_meta(buf, {
  description: params.description,
  keywords: keywords,
  favicon_url: favicon_url
}) %>
<% partial_ios_meta(buf, {
  viewport: viewport,
  icon_url: ios_icon_url
}) %>
<% partial_ogp(buf, {
  url: url,
  title: params.title,
  description: params.description,
  site_name: params.title,

  app_id: facebook_app_id,
  type: ogp_type,

  image_url: params.imageOGP
}) %>
<title><%= params.title %></title><% if (opts.env == 'tumblr') { %>
<meta name="text:Copyright" content=""/>
<meta name="image:OGP" content=""/>
<style>
<% include ../../../css/lp.css %>
</style><% } else { %>
<link rel="stylesheet" href="<%= css_path %>/<%= name %>.css" /><% } %>
<style>
.download__link--ios {
  background-image: url('<%= img_path %>/btn_appstore.png');
}
.download__link--android {
  background-image: url('<%= img_path %>/btn_googleplay.png');
}
</style>
</head>
<body>
<section id="wrapper">
<% content(buf, params) %>
<!-- /#wrapper --></section><% if (opts.env == 'tumblr') { %>
<script>
<% include ../../../js/lp.js %>
</script><% } else { %>
<script src="<%= js_path %>/<%= name %>.js"></script><% } %>
</body>
</html><% } %>
